@model Shopping.Models.CityViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Criar</h1>

<h4>Cidade</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="AddCity">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>           
            <input type="hidden" asp-for="IdState"/>
            <partial name="PartialViews/_City" />
            <div class="form-group mt-2">
                <input type="submit" value="Criar" class="btn btn-outline-primary" />
                <a asp-action="DetailsState" asp-route-id="@Model?.IdState" class="btn btn-outline-success">Voltar</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}