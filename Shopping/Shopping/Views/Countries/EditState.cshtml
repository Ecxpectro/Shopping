@model Shopping.Models.StateViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Estado</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditState">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdCountry" />
            <input type="hidden" asp-for="IdState" />
               <partial name="PartialViews/_State" />

            <div class="form-group mt-2">
                <input type="submit" value="Salvar" class="btn btn-outline-primary" />
                <a asp-action="Details" asp-route-id="@Model.IdCountry" class="btn btn-outline-success">Voltar</a>
            </div>
        </form>
    </div>
</div>

<div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}