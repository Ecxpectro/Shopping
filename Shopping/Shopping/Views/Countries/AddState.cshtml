@model Shopping.Models.StateViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Criar</h1>

<h4>Estado</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="AddState">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>           
            <input type="hidden" asp-for="IdCountry"/>
            <partial name="PartialViews/_State" />
            <div class="form-group mt-2">
                <input type="submit" value="Criar" class="btn btn-outline-primary" />
                <a asp-action="Details" asp-route-id="@Model?.IdCountry" class="btn btn-outline-success">Voltar</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
