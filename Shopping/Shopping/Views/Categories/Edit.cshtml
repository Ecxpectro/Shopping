@model Shopping.Data.Entities.Category

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Categoria</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdCategory" />
               <partial name="PartialViews/_Category" />

            <div class="form-group mt-2">
                <input type="submit" value="Salvar" class="btn btn-outline-primary" />
                <a asp-action="Index" class="btn btn-outline-success">Voltar</a>
            </div>
        </form>
    </div>
</div>

<div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
